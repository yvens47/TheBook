<!DOCTYPE html>
<html>
	<head>
		<title>Portfolio</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<ul class="nav">
						<a class="brand">Portfolio</a>
						<li>
							<a class="">Home</a>
						</li>

					</ul>
					<ul class="nav pull-right">
						<% if user_signed_in? %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b> </a>
							<ul class="dropdown-menu">
								<li>
									<a href="#">Profile</a>
								</li>
								<li>
									<a href="#">Edit</a>
								</li>
								<li>
									<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
								</li>
								<%else%>
								<li>
									<a href="#">Sign Up</a>
								</li>
								<li>
									<a href="#">Login</a>
								</li>
							</ul>
						</li>
						<%end%>
					</ul>
				</div>

			</div>

		</div>
		<div class="ribbon ">

		</div>

		<!-- main content area-->
		<div class="container">
			<div class="span7 pull-left">

				<% if flash[:error] -%>
				<div class="alert">
					<button type="button" class="close" data-dismiss="alert">
						&times;
					</button>
					<p class='error'>
						<%= h flash[:error] %>
					</p>
				</div>

				<% end -%>
				<% if flash[:notice] -%>
				<div class="alert alert-success">
					<button type="button" class="close" data-dismiss="alert">
						&times;
					</button>
					<p class='error'>
						<%= h flash[:notice] %>
					</p>
				</div>

				<% end -%>
				<%= yield%>

			</div>
			<div class="span4 pull-right">

				<div class="well">
					<div class="frm">
						<h2>Login</h2>
						<%= form_for("user", :url=>user_session_path,:class=>"form-vertical") do |f|%>
						<div>

							<%= f.text_field :email, :placeholder=>"Email", :autofocus => true%>
						</div>
						<div>
							<%= f.text_field :password, :placeholder =>"password"%>
						</div>

						<div>
							<%= f.submit "Sign in", :class=>"btn"%>
							<%= link_to "Forgot Your Password", new_password_path('user')%>
						</div>

						<%end%>
					</div>
				</div>
				<div class="span4 pull-right">
					<div class="cat">

						Category
					</div>
					<div class="catinner">
						<u class="navlist">
							<li>
								<a href="#"> Familly </a>
							</li>
							<li>
								<a href="#"> Programming </a>
							</li>
							<li>
								<a href="#"> Relationship</a>
							</li>
							<li>
								<a href="#"> Familly </a>
							</li>
							<li>
								<a href="#"> Familly </a>
							</li> </u>
					</div>
				</div>

			</div>

		</div>
		<div class="footer">
			<div class="container">
				<p>
					Copyright
				</p>
			</div>
		</div>

	</body>
</html>
