<h1>Listing posts</h1>

<% @posts.each do |post| %>
<div class ="page-header">

	<h3><%= post.title %></h3>
	<hr/>
	<p>
		<%= post.content %>
	</p>
	<p>
		<%= link_to 'Show', post %>
		<%= link_to 'Edit', edit_post_path(post) %>
		<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
</div>
<% end %>

<%= link_to 'New Post', new_post_path, :class=>'btn btn-success' %>

