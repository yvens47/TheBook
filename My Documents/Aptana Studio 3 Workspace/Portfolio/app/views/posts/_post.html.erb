<%= div_for post do%>

	<h3> <%= post.title %></h3>
	<hr/>
	<p>
		<%= post.content %>
		<%= @post.user.first_name%>
	</p>
	<div class="meta">
		<%= link_to time_ago_in_words(post.created_at) +" ago", post %> 

		<span class="admin"><%= link_to 'Edit', edit_post_path(post) %></span>
		<span class="admin"><%= link_to 'Destroy', post, method: :delete, remote: true %></span>
	</div>
	
	<%end%>